  <style>
    /* Additional styles for the form */
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f9;
        margin: 0;
        padding: 0;
    }

    .form-container {
        max-width: 800px;
        margin: 50px auto;
        padding: 30px;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        display: block;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .form-group input, 
    .form-group select {
        width: 100%;
        padding: 10px;
        font-size: 1rem;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .form-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .form-header h1 {
        color: teal;
        margin-bottom: 10px;
    }

    .form-header p {
        font-size: 1.2rem;
        color: #555;
    }

    .form-actions {
        text-align: center;
        margin-top: 20px;
    }

    .form-actions .hero-btn {
        padding: 12px 30px;
        font-size: 1.2rem;
        color: #fff;
        background-color: teal;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .form-actions .hero-btn:hover {
        background-color: white;
        color: teal;
        box-shadow: 0 0 0 1px teal;
    }

    footer {
        margin-top: 50px;
        text-align: center;
        font-size: 0.9rem;
        color: #777;
    }

    footer a {
        color: #ffffff;
        text-decoration: none;
    }

    footer a:hover {
        text-decoration: underline;
    }

    .radio-group {
        display: flex;
        align-items: center;
        gap: 15px;
    }
  </style>
</head>
<body>
  <header>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container d-flex justify-content-between align-items-center">
        <!-- Turtle Shelter Project on the far left -->
        <a class="navbar-brand" href="/">TURTLE SHELTER PROJECT</a>
  
        <!-- Navbar Toggle Button for Small Screens -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
  
        <!-- Navbar links, centered (This is the collapsible part) -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mx-auto">
              <!-- Fill navigation links as those pages are built -->
              <li class="nav-item"><a class="nav-link" href="/">Mission</a></li>
              <li class="nav-item"><a class="nav-link" href="/">Impact</a></li>
              <li class="nav-item"><a class="nav-link" href="/volunteerSignUpPage">Volunteer Sign Up</a></li>
              <li class="nav-item"><a class="nav-link" href="#">Request An Event</a></li>
              <li class="nav-item"><a class="nav-link" href="/">Jen's Story</a></li>
            </ul>
          </div>
  
        <!-- Social Media Icons and Login Button on the right -->
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <form action="/loginPage" method="GET">
              <button class="login1-btn">LOG IN</button>
            </form>
            <div class="social-media">
              <a href="https://www.facebook.com/turtleshelterproject/" target="_blank">
                <i class="fa fa-facebook-square"></i>
              </a>
            </div>
            <div class="social-media">
              <a href="https://www.instagram.com/turtleshelterproject/?hl=en" target="_blank">
                <i class="fa fa-instagram"></i>
              </a>
            </div>
          </li>
          
        </ul>
      </div>
    </nav>
  </header>
<body>
    <section class="form-container">
        <div class="form-header">
            <h1>Request an Event</h1>
            <p>Fill out the details below to submit your event request.</p>
        </div>
    </header>
    <section class="form-container">
        <form action="/eventRequests" method="POST">
            <div class="form-group">
                <label for="estimated_participant_count">Estimated Participant Count:</label>
                <input type="number" id="estimated_participant_count" name="estimated_participant_count" required>
            </div>

            <div class="form-group">
                <label for="event_contact_first_name">First Name:</label>
                <input type="text" id="event_contact_first_name" name="event_contact_first_name" required>
            </div>

            <div class="form-group">
                <label for="event_contact_last_name">Last Name:</label>
                <input type="text" id="event_contact_last_name" name="event_contact_last_name" required>
            </div>

            <div class="form-group ">
                <label for="event_contact_phone">Phone Number:</label>
                <input type="tel" id="event_contact_phone" name="event_contact_phone" required>
            </div>

            <div class="form-group">
                <label for="event_city">What City is the event going to be in?</label>
                <input type="text" id="event_city" name="event_city" required>
            </div>

            <div class="form-group">
                <label for="event_state">What State is the event going to be in? (UT for Utah)</label>
                <input type="text" id="event_state" name="event_state" required>
            </div>

            <div class="form-group">
                <label for="event_zip">ZIP Code of the event?</label>
                <input type="text" id="event_zip" name="event_zip" required>
            </div>

            <div class="form-group">
                <label for="multi_day_event">Will this be a Multi-Day Event?</label>
                <div class="radio-group">
                    <label class="form-check-label">
                        <input type="radio" id="multi_day_event_yes" name="multi_day_event" value="true" class="form-check-input" required> Yes
                    </label>
                    <label class="form-check-label ms-3">
                        <input type="radio" id="multi_day_event_no" name="multi_day_event" value="false" class="form-check-input" required> No
                    </label>
                </div>
            </div>
            
            <div class="form-group">
                <label for="first_choice_event_date">What is your first preference for the date of the event?</label>
                <input type="date" id="first_choice_event_date" name="first_choice_event_date" required>
            </div>

            <div class="form-group">
                <label for="second_choice_event_date">What is your Second preference for the date of the event?</label>
                <input type="date" id="second_choice_event_date" name="second_choice_event_date">
            </div>

            <div class="form-group">
                <label for="third_choice_event_date">What is your Third preference for the date of the event?</label>
                <input type="date" id="third_choice_event_date" name="third_choice_event_date">
            </div>

            <div class="form-group">
                <label for="estimated_event_start_time">What time do you want the event to start?</label>
                <input type="time" id="estimated_event_start_time" name="estimated_event_start_time" required>
            </div>

            <div class="form-group">
                <label for="estimated_event_duration_hours">How long do you want the event to be? (Hours)</label>
                <input type="number" id="estimated_event_duration_hours" name="estimated_event_duration_hours" required>
            </div>

            <div class="form-group">
                <label for="space_size">What is the size of the space the event will be in?</label>
                <select id="space_size" name="space_size" required>
                    <% space_sizes.forEach(size => { %>
                        <option value="<%= size.space_size_id %>"><%= size.space_size_description %></option>
                    <% }) %>
                </select>
            </div>

            <div class="form-group">
                <label for="event_type">Event Type:</label>
                <select id="event_type" name="event_type" required>
                    <% event_types.forEach(type => { %>
                        <option value="<%= type.event_type_id %>"><%= type.event_type_description %></option>
                    <% }) %>
                </select>
            </div>

            <div class="form-group">
                <label for="jen_story">Would you like Jen to share her story? (Long or short version)</label>
                <select id="jen_story" name="jen_story" required>
                    <option value="long">Long</option>
                    <option value="short">Short</option>
                    <option value="no">No</option>
                </select>
            </div>

            <div class="form-actions">
                <button type="submit" class="hero-btn">Submit Request</button>
            </div>
        </form>
    </section>

